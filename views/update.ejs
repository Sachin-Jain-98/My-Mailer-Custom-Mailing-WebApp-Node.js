                            </li>
                        <%}%>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">
                            <form class="form-header" action="" method="POST">
                                <input class="au-input au-input--xl" type="hidden" name="search" placeholder="Search for datas &amp; reports..." />
                            </form>
                            <div class="header-button">
                                <div class="account-wrap">
                                    <div class="account-item clearfix js-item-menu">
                                        <div class="image">
                                            <img src="images/icon/avatar-01.jpg" alt="<%=me[0].uname%>" />
                                        </div>
                                        <div class="content">
                                            <a class="js-acc-btn" href="#"><%=me[0].uname%></a>
                                        </div>
                                        <div class="account-dropdown js-dropdown">
                                            <div class="info clearfix">
                                                <div class="image">
                                                    <a href="#">
                                                        <img src="images/icon/avatar-01.jpg" alt="<%=me[0].uname%>" />
                                                    </a>
                                                </div>
                                                <div class="content">
                                                    <h5 class="name">
                                                        <a href="#"><%=me[0].uname%></a>
                                                    </h5>
                                                    <span class="email"><%=me[0].email%></span>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__body">
                                                <div class="account-dropdown__item">
                                                    <a href="<%= update %>">
                                                        <i class="zmdi zmdi-account"></i>Update</a>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__footer">
                                                <a href="<%= logout %>">
                                                    <i class="zmdi zmdi-power"></i>Logout</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="container-fluid">
                    <div class="col-lg-13">
                        <div class="card">
                            <div class="card-header">
                                <strong>Update Account Details</strong>
                            </div>
                            <div class="card-body card-block">
                                <form method="POST" action="/update">
                                </br>
                                <label>Update Profile Details</label>
                                      <div class="input-group mb-3">
                                        <span class="input-group-text" >Username&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                        <input type="email" class="form-control" value="<%= name%>" name="one"readonly>
                                        <div class="input-group-prepend">
                                        </div>
                                      </div>
                                      <div class="input-group mb-3">
                                        <span class="input-group-text">Email&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                        <input type="email" class="form-control" value="<%= email %>" name="two">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">@Example</span>
                                        </div>
                                      </div>
                                      <div class="input-group mb-3">
                                        <span class="input-group-text">New Password&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                        <input type="password" class="form-control" placeholder="Password" name="three">
                                        <div class="input-group-prepend">
                                        </div>
                                      </div>
                            
                                      <div class="input-group mb-3">
                                        <span class="input-group-text">Confirm Password</span>
                                        <input type="password" class="form-control" placeholder="Re Enter Password" name="four">
                                        <div class="input-group-prepend">
                                        </div>
                                      </div>
                                      <center><input class="btn btn-success" type="submit" value="Update"></center>
                                </form>
                            </div>
                        </div>
                    </div>
                    </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>

    </div>


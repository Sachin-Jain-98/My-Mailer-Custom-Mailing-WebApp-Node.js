          <div>
              <div class="input-group-prepend">
              <span class="input-group-text">Contacts</span>
              </div>
              <select name="ct" class="js-example-tags custom-select" multiple="multiple">
                  <option selected="selected">Select From Contacts</option>
                  <% for(var i=0; i < cntct.length ; i++){%>
                  <option value="<%= cntct[i].Contact_mail%>"><%= cntct[i].Contact_name%></option>
                  <%} %>
              </select>
              </div>
            </br>
          <div>
          <div class="input-group-prepend">
          <span class="input-group-text">Templates</span>
          </div>
          <select name="tplte" class="js-example-basic-single custom-select" onchange="this.form.submit()">
              <option>Select Templates</option>
              <% for(var i=0; i < content.length ; i++){%>
              <option><%= content[i].subject%></option>
              <%} %>
          </select>
          </div>
          </br>
          <div>
            <div class="input-group-prepend">
            <span class="input-group-text">Subject&nbsp;&nbsp;&nbsp;&nbsp;</span>

          <center><input class="btn btn-success" type="submit" onclick="DoSubmit()" value="SEND"></center>
    </form>
    <script>
      $(document).ready(function() {
    $('.js-example-tags').select2({
      tags:true,
      tokenSeparators: [',', ' ']
    });
    });
      $(document).ready(function() {
    $('.js-example-basic-single').select2();
    });
        $('#summernote').summernote({
        placeholder: 'Mail Body',
        tabsize: 2,
        height: 100
      });
      function DoSubmit(){
      document.myform.myinput.value = '1';
      return true;
      }
    </script>    
